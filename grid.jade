h4 
    != grid.header
table.table(class='table-hover')
        thead
            tr
                each head in grid.headerRow
                    th 
                        != head
        tbody
            each row in grid.rows
                tr
                    each column in row.columns
                        td 
                            if (column.title)
                                a(href='#{column.href || "#"}') #{column.title}
                            else
                                != column
                    td
                        each action in row.actions
                            a(href='#{action.href}') #{action.title}
.grid-footer
    != grid.footer